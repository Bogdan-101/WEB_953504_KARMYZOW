@page "{id:int}"
@model WEB_953504_KARMYZOW.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Game.Id" />
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Game.Image))
                {
                    <img src=~/Images/@Model.Game.Image
                         alt="NoSuchFile" width="150" />
                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="custom-file mt-3">
                    <input type="file" class="custom-file-input" asp-for="Image" id="customFile">
                    <label class="custom-file-label" for="customFile">
                        Выберите файл изображения
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Game.Name" class="control-label"></label>
                    <input asp-for="Game.Name" class="form-control" />
                    <span asp-validation-for="Game.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Game.Description" class="control-label"></label>
                    <input asp-for="Game.Description" class="form-control" />
                    <span asp-validation-for="Game.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Game.Rating" class="control-label"></label>
                    <input asp-for="Game.Rating" class="form-control" />
                    <span asp-validation-for="Game.Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Game.Image" class="control-label"></label>
                    <input asp-for="Game.Image" class="form-control" />
                    <span asp-validation-for="Game.Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Game.GameGroupId" class="control-label"></label>
                    <select asp-for="Game.GameGroupId" class="form-control" asp-items="ViewBag.GameGroupId"></select>
                    <span asp-validation-for="Game.GameGroupId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/bs-custom-file-input.js"></script> 
    <script>bsCustomFileInput.init();</script>
}
